function fyberoptik_node_view($node, $view_mode) {
    if ($node->type=="top"){
        if ($view_mode == 'full'){
            $node->content['my_extra_content'] = array(
                 "#markup"=> '<div>My extra content!</div>',
                 "#weight"=> 100
              );   
           }
         return $node;
    }    
}

